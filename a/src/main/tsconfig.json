{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist",
    "baseUrl": "../..",
    "target": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "paths": {
      "@/main/*": ["src/main/*"],
      "@/common/*": ["src/common/*"]
    },
  },
  "include": ["../main/**/*", "../common/**/*"],
  "exclude": ["../renderer/**/*"]
}
